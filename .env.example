# Environment variables for Docker Compose
# Copy this file to .env and customize as needed

# Run mode: once, loop, or cron
RUN_MODE=once

# For loop mode: interval between checks in seconds (default: 300 = 5 minutes)
CHECK_INTERVAL=300

# For cron mode: cron schedule expression (default: */5 * * * * = every 5 minutes)
# CRON_SCHEDULE=*/5 * * * *

# Timezone (default: UTC)
TZ=UTC

# Python unbuffered output (recommended to keep as 1)
PYTHONUNBUFFERED=1
